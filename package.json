{
  "name": "@terminal-api/cli",
  "version": "0.1.0",
  "description": "CLI for the Terminal Telematics API",
  "keywords": [
    "api",
    "cli",
    "eld",
    "fleet",
    "logistics",
    "telematics",
    "terminal",
    "trucking"
  ],
  "homepage": "https://withterminal.com",
  "bugs": {
    "url": "https://github.com/terminal-api/terminal-cli/issues"
  },
  "license": "MIT",
  "author": "Terminal <support@withterminal.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/terminal-api/terminal-cli.git"
  },
  "bin": {
    "terminal": "./dist/cli.js"
  },
  "files": [
    "dist",
    "generated",
    "LICENSE",
    "README.md",
    "src"
  ],
  "type": "module",
  "module": "src/cli.ts",
  "scripts": {
    "dev": "bun --watch run src/cli.ts",
    "build": "bun build src/cli.ts --outdir dist --target bun",
    "build:binaries": "bun run scripts/build-binaries.ts",
    "build:npm": "bun run scripts/build-npm-packages.ts",
    "build:release": "bun run build:binaries && bun run build:npm",
    "publish:npm": "bun run scripts/publish.ts",
    "generate": "bun run scripts/generate.ts && bun run format",
    "lint": "oxlint . --type-aware",
    "format": "oxfmt --write .",
    "format:check": "oxfmt --check .",
    "typecheck": "tsgo --noEmit",
    "test": "bun test",
    "check": "bun run typecheck && bun run lint && bun run format:check && bun test",
    "prepublishOnly": "bun run check && bun run build"
  },
  "dependencies": {
    "@opentui/core": "0.1.72",
    "commander": "^14.0.2"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "@typescript/native-preview": "^7.0.0-dev.20260113.1",
    "oxfmt": "^0.24.0",
    "oxlint": "^1.39.0",
    "oxlint-tsgolint": "^0.11.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
