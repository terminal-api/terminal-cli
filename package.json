{
  "name": "terminal-cli",
  "version": "0.1.0",
  "description": "CLI for the Terminal Telematics API",
  "bin": {
    "terminal": "./dist/cli.js"
  },
  "type": "module",
  "module": "src/cli.ts",
  "scripts": {
    "dev": "bun --watch run src/cli.ts",
    "build": "bun build src/cli.ts --outdir dist --target bun",
    "generate": "bun run scripts/generate.ts",
    "lint": "oxlint .",
    "format": "oxfmt --write .",
    "format:check": "oxfmt --check .",
    "typecheck": "tsgo --noEmit",
    "test": "bun test",
    "check": "bun run typecheck && bun run lint && bun run format:check && bun test"
  },
  "dependencies": {
    "@opentui/core": "^0.1.68"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript/native-preview": "^7.0.0-dev.20260103.1",
    "oxfmt": "^0.22.0",
    "oxlint": "^1.37.0",
    "typescript": "^5"
  }
}
